<form id="addempform" action="/employee/addEmp" method="POST">
    <fieldset>
        <legend>Employee Details</legend>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Employee Name: </label>
            <input type="text" class="form-control" id="inputName" name="name" required>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-lg-2 col-form-label">Employee Email: </label>

            <input type="email" class="form-control" id="inputPassword3" required name="empmail">

        </div>
        <div class="form-group row">
            <label for="inputId" class="col-sm-2 col-form-label">Employee ID: </label>
            <input type="number" class="form-control" id="inputId" required name="empid">

        </div>
        <div class="form-group row">
            <label for="jobTitle" class="col-sm-2 col-form-label">Job Title: </label>
            <input type="text" class="form-control" id="jobTitle" required name="jobtitle">

        </div>
        <div class="form-group row">
            <label for="department" class="col-sm-2 col-form-label">Department: </label>
            <input type="text" class="form-control" id="department" required name="department">

        </div>
        <div class="form-group row">
            <label for="department" class="col-sm-2 col-form-label">Manager's email : </label>
            <input type="email" class="form-control" id="department" required name="manager_mail">

        </div>
        <div class="form-group row">
            <label for="department" class="col-sm-2 col-form-label">Password for Employee: </label>
            <input type="password" class="form-control" id="department" required name="password">
        </div>
        <div class="form-group row">
            <button type="submit" class="btn btn-primary">Submit</button>

        </div>
    </fieldset>
</form>